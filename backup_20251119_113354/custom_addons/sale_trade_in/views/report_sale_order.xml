<odoo>
    <template id="report_saleorder_document_trade_in" inherit_id="sale.report_saleorder_document">
        <xpath expr="//div[@id='total']//table[1]" position="replace">
            <table class="table table-sm o_main_table">
                <tbody>
                    <tr>
                        <td><span t-esc="_('Untaxed Amount')"/></td>
                        <td class="text-end">
                            <span t-field="doc.amount_untaxed"/>
                        </td>
                    </tr>
                    <tr>
                        <td><span t-esc="_('Taxes')"/></td>
                        <td class="text-end">
                            <span t-field="doc.amount_tax"/>
                        </td>
                    </tr>
                    <tr>
                        <td><span t-esc="_('Total Trade-in')"/></td>
                        <td class="text-end">
                            <span>
                                (<t t-esc="formatLang(doc.trade_in_total, currency_obj=doc.currency_id)"/>)
                            </span>
                        </td>
                    </tr>
                    <tr class="o_main_total o_total_row">
                        <td><span t-esc="_('Total')"/></td>
                        <td class="text-end">
                            <span t-field="doc.amount_total"/>
                        </td>
                    </tr>
                </tbody>
            </table>
        </xpath>
    </template>
</odoo>
