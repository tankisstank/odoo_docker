<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_picking_form_inherit_trade_in" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.trade.in</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_id']" position="after">
                <field name="gold_purity" optional="show" attrs="{'readonly': [('state', '=', 'done')]}"/>
                <field name="price_compensation" optional="show" attrs="{'readonly': [('state', '=', 'done')]}"/>
            </xpath>
        </field>
    </record>
</odoo>
