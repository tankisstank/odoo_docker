<odoo>
    <record id="view_order_form_trade_in" model="ir.ui.view">
        <field name="name">sale.order.form.trade.in</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="after">
                <field name="is_trade_in"/>
                <field name="trade_in_price_unit" attrs="{'invisible': [('is_trade_in', '=', False)]}"/>
            </xpath>
            <xpath expr="//field[@name='amount_total']" position="before">
                <field name="trade_in_total" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo> 