<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_gold_debt_report_wizard_form" model="ir.ui.view">
        <field name="name">gold.debt.report.wizard.form</field>
        <field name="model">gold.debt.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Debt Report">
                <group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group>
                        <field name="partner_ids" widget="many2many_tags"/>
                    </group>
                </group>
                <footer>
                    <button name="action_print_summary" string="Print Summary" type="object" class="btn-primary"/>
                    <button name="action_print_detail" string="Print Detail" type="object" class="btn-secondary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_gold_debt_report_wizard" model="ir.actions.act_window">
        <field name="name">Debt Reports</field>
        <field name="res_model">gold.debt.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
