<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_picking_form_inherit_trade_in" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.trade.in</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_id']" position="after">
                <field name="is_trade_in" optional="show"/>
                <field name="original_product_id" optional="show" attrs="{'invisible': [('is_trade_in', '=', False)]}"/>
                <field name="original_weight" optional="show" attrs="{'invisible': [('is_trade_in', '=', False)]}"/>
                <field name="gold_purity" optional="show" attrs="{'readonly': [('state', '=', 'done')]}"/>
                <field name="exchange_rate" optional="hide"/>
                <field name="price_compensation" optional="show" attrs="{'readonly': [('state', '=', 'done')]}"/>
            </xpath>
        </field>
    </record>

    <record id="view_picking_tree_inherit_trade_in" model="ir.ui.view">
        <field name="name">stock.picking.tree.inherit.trade.in</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree"/>
        <field name="arch" type="xml">
            <tree position="attributes">
                <attribute name="default_order">picking_type_id, id desc</attribute>
                <attribute name="decoration-success">picking_type_code == 'incoming'</attribute>
                <attribute name="decoration-warning">picking_type_code == 'outgoing'</attribute>
                <attribute name="decoration-info">state == 'assigned'</attribute>
            </tree>
            <field name="name" position="before">
                 <!-- Make sure picking_type_code is available for decoration logic -->
                 <field name="picking_type_code" invisible="1"/>
            </field>
            <field name="origin" position="attributes">
                <attribute name="optional">show</attribute>
            </field>
            <field name="scheduled_date" position="attributes">
                <attribute name="optional">show</attribute>
            </field>
             <field name="location_id" position="attributes">
                <attribute name="optional">show</attribute>
            </field>
             <field name="location_dest_id" position="attributes">
                <attribute name="optional">show</attribute>
            </field>
            <field name="state" position="attributes">
                <attribute name="optional">show</attribute>
            </field>
        </field>
    </record>
</odoo>
