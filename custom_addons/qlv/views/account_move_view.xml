<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_inherit_trade_in" model="ir.ui.view">
        <field name="name">account.move.form.inherit.trade.in</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='name']" position="after">
                <field name="is_trade_in" optional="show"/>
                <field name="original_product_id" optional="show" attrs="{'invisible': [('is_trade_in', '=', False)]}"/>
                <field name="gold_purity" optional="show"/>
                <field name="price_compensation" optional="show"/>
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree/field[@name='name']" position="after">
                <field name="is_trade_in" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>
